meats = {"chicken": 5.99, "beef": 6.49, "pork": 2.79, "lamb": 7.89, "Salmon": 6.47}
fruits = {"apple": 0.99, "banana": 0.59, "orange": 1.29, "grapes": 0.99}
drinks = {"water": 0.89, "soda": 1.49, "juice": 2.49, "tea": 4.67, "milk": 3.45}
total = 0
things_getting = []

def drink_function():
    global total
    global things_getting
    global drinks

    print("Welcome to the Drinks Section!")
    while True:
        for drink, price in drinks.items():
            print(f"{drink.capitalize()}: ${price}")

        drink_choice = input("Enter the type of drink you want: ")
        if drink_choice.lower() in drinks:
            total += drinks[drink_choice.lower()]
            things_getting.append(drink_choice.lower)
        else:
            print("We don't have that type of drink currently.")

        print("Meats Completed! Would you like to go to another category?")
        answer = input("Enter Y for Yes or N for No: ")

        if answer.upper() == "Y":
            category_choice = input("Enter the category name: ")

            #this will be the meats function again for fruits and meats
            if category_choice.lower() == "meats":
              meat_calling = meat_function()
              print(meat_calling)
            elif category_choice.lower() == "fruits":
              fruit = fruit_function()
              print(fruit)
            elif category_choice.lower() == "pay":
              paying = pay_function()
              print(paying)
            else:
              print("We don't have that here!")
              exit()

            #this will be the line the enters the fruits category

        else:
            print("Ok! Going back to the drinks!")
            continue

def meat_function():
    global total
    global things_getting
    global meats

    print("Welcome to the Meats Section!")
    while True:
        for meat, price in meats.items():
            print(f"{meat.capitalize()}: ${price}")

        meat_choice = input("Enter the meat you want: ")
        if meat_choice.lower() in meats:
            total += meats[meat_choice.lower()]
            things_getting.append(meat_choice.lower)
        else:
            print("We don't have that meat currently.")

        print("Meats Completed! Would you like to go to another category?")
        answer = input("Enter Y for Yes or N for No: ")

        if answer.upper() == "Y":
            category_choice = input("Enter the category name: ")
            if category_choice.lower() == "drinks":
              drink = drink_function()
              print(drink)
            elif category_choice.lower() == "fruits":
              fruit = fruit_function()
              print(fruit)
            elif category_choice.lower() == "pay":
              paying = pay_function()
              print(paying)
            else:
              print("We don't have that!")
              exit()

            #this will be the meats function again for fruits and drinks

        else:
            print("Ok! Going back to the Meats!")
            continue

def fruit_function():
    global total
    global things_getting
    global fruits

    print("Welcome to the Fruits Section!")
    while True:
        for fruit, price in fruits.items():
            print(f"{fruit.capitalize()}: ${price}")

        fruit_choice = input("Enter the type of fruit you want: ")
        if fruit_choice.lower() in fruits:
            total += fruits[fruit_choice.lower()]
            things_getting.append(fruit_choice.lower)
        else:
            print("We don't have that type of fruit currently.")

        print("Fruits Completed! Would you like to go to another category?")
        answer = input("Enter Y for Yes or N for No: ")

        if answer.upper() == "Y":
            category_choice = input("Enter the category name: ")

            #this will be the meats function again for fruits and meats
            if category_choice.lower() == "meats":
              meat_calling = meat_function()
              print(meat_calling)
            elif category_choice.lower() == "drinks":
              drink_calling = drink_function()
              print(drink_calling)
            elif category_choice.lower() == "pay":
              paying = pay_function()
              print(paying)
            else:
              print("We don't have that here!")
              exit()

            #this will be the line the enters the fruits category

        else:
            print("Ok! Going back to the fruits!")
            continue



def pay_function():
  print("Welcome!")

  while True:
    finished = input("Did you finish shopping? > ")
    
    if finished.upper() == "Y":
    #this will end the program if the user is done shopping
      print("Wonderful!")
      print(f"Your total will be {total}")
      exit()
    elif finished.upper() == "N":
    #this will continue the program if the user isn't done shopping
      print("Continue shopping!")

      for i in ["fruits", "meats", "drinks"]:
        print(i)
        
      continue_shopping = input("Which category do you want to return to? > ")

      if continue_shopping.lower() == "fruits":
        fruit_s = fruit_function()
        print(fruit_s)
      elif continue_shopping.lower() == "meats":
        meat_s = meat_function()
        print(meat_s)
      elif continue_shopping.lower() == "drinks":
        drink_s = drink_function()
        print(drink_s)
      else:
        print("That category doesn't exist! Please try again!")
        continue

print("Welcome! Please select the category you want!")

for category in ["meats", "fruits", "drinks"]:
    print(f"- {category.capitalize()}")

category_choice = input("Enter the category name: ")

if category_choice.lower() in ["meats", "fruits", "drinks"]:
    if category_choice.lower() == "meats":
        meat_function()
    elif category_choice.lower() == "drinks":
        drink_function()
    elif category_choice.lower() == "fruits":
        fruit_function()
    else:
        print("Category not available yet.")
